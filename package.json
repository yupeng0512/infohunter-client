{
  "name": "infohunter-client",
  "private": true,
  "packageManager": "pnpm@10.30.1",
  "scripts": {
    "dev:web": "pnpm --filter @infohunter/web dev",
    "dev:mobile": "pnpm --filter @infohunter/mobile start",
    "build:web": "pnpm --filter @infohunter/web build",
    "build:shared": "pnpm --filter @infohunter/shared build",
    "ios": "bash scripts/run-ios.sh",
    "ios:rebuild": "bash scripts/rebuild-ios.sh",
    "ios:dev": "bash scripts/dev.sh",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "clean": "pnpm -r exec rm -rf node_modules dist .expo ios android"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "pnpm": {
    "overrides": {
      "react": "19.1.0",
      "react-native": "0.81.5",
      "@tanstack/react-query": "^5.60.0"
    }
  }
}
